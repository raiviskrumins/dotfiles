.edit-collection {
  margin-left: 15px;
}

table.table > tbody > tr.product-row > td:first-child {
  height: 55px;
  padding: 0;
}

#product_list .no-products {
  padding-top: 50px;
  border-bottom: none;
}

.multi-actions {
  display: none;

  .btn {
    margin-left: 5px;

    img {
      vertical-align: initial;
    }
  }
}

.date-updated {
  font-style: italic;
}

#newProductForm,
#imageEdit {
  .icon-rotate,
  .icon-crop {
    font-size: 24px;
    color: $green;
    cursor: pointer;

    &.disabled {
      cursor: not-allowed;
    }
  }
}

#header_reference {
  position: fixed;
  top: 0;
  display: none;

  tr th {
    padding: 15px 20px;
  }

  .icon-uparrow {
    color: $orange;
  }
}

#product_list {
  margin-bottom: 90px;
}

.product-row {
  display: none;

  &.visible {
    display: table-row;
  }

  a:hover,
  a:focus,
  a:active {
    text-decoration: underline;
  }

  .product-img {
    display: block;
    max-width: 100%;
  }

  .select-button {
    display: inline-block;
    height: 16px;
    width: 16px;
    border: 1px solid $medium-grey;
    border-radius: 4px;
    text-align: center;
    line-height: 0.7;

    &.selected {
      background-color: $orange;
      border-color: $orange;
    }
  }
}

.product-header h1 {
  margin-top: 0;
}

.product-default-image {
  margin-right: 10px;
  width: 80px;

  img {
    max-height: 80px;
  }
}

.print-tearsheet {
  margin-top: 5px;
  margin-right: 10px;
  padding-bottom: 5px;
  span {
    font-size: 12px;
  }
}

.product-actions {
  margin: -25px 0 15px;

  .audit-text {
    position: relative;
    top: 15px;
  }
}

table.table > tbody > tr > td.loading {
  padding: 60px 0;
  border-bottom: 0px;

  img {
    width: 75px;
  }
}

.product-name {
  font-weight: 400;
}

#components {

  #visibility-active {
    display: none;
  }

  .panel-body {
    position: relative;
  }

  .component-edit {
    display: none;
    margin-left: 15px;

    &[data-component='image'],
    &[data-component='option'] {
      opacity: 0;
    }
  }

  .subcomponent-section {
    margin-bottom: 20px;
  }

  .remove-subcomponent {
    margin-left: 15px;
  }
}

.new-image-btn {
  position: absolute;
  top: -40px;
  right: 20px;
}

.last-update {
  font-style: italic;
  font-size: 13px;
}

.image-frame {
  overflow-x: auto;

  .image-holder {
    width: 100000000px;
  }
}

/* styles for multivalue option sets */
.combobox {
  .input-group-addon:not(:first-child):not(:last-child),
  .input-group-btn:not(:first-child):not(:last-child),
  .input-group .form-control:not(:first-child):not(:last-child) {
    border-top-right-radius: 4px;
    border-bottom-right-radius: 4px;
    border-left: 0px;
    padding: 0px;
  }
}

.ui-menu {
    list-style: none;
    padding: 0px;
    margin: 0px;
    display: block;
    outline: none;
}

.ui-autocomplete {
  position: absolute;
  cursor: default;
  z-index: 100;
  max-height: 100px;
  overflow-y: auto;
  overflow-x: hidden;
  background-color: $white;
  border: 1px solid $medium-grey;

  a {
    color: $grey-black;
  }

  li {
    padding-left: 2px;
    padding-right: 2px;
  }

  li:hover {
    background-color: $light-grey;
  }
}

.multivalue-data {
  border-top: 1px solid $medium-grey;
  padding-top: 15px;
  margin-top: 15px;

  .multivalue-labels {
    padding-top: 23px;
  }

  .label {
    display: inline-block;
    padding: 4px 6px;
    background-color: $dark-grey;
    margin-right: 5px;
    margin-bottom: 3px;

    .value {
      padding-right: 5px;
    }

    .icon-x {
      cursor: pointer;
      font-size: 75%;
      padding-left: 5px;
    }
  }
}

#productAdd {
  label[for="image_type"] {
    margin-top: 5px;
  }

  .image-upload-wrapper {
    padding-top: 5px;
    width: 100%;
  }

  span.loading {
    display: none;
    img {
        margin: 50px 0px;
    }
  }

  .radio {
    margin-top: 0;

    +.radio {
      margin-top: -5px;
    }
  }
}

/* OPTION SETS - PRODUCT */

ul.optionset-list {
  border: 1px solid $medium-grey;
  max-height: 200px;
  overflow-y: scroll;
  margin-bottom: 10px;

  li {
    padding: 10px;

    &:nth-child(even) {
      background-color: $light-grey;
    }

    .checkbox {
      margin: 0;
    }
  }
}

.options {
  display: none;

  .option-image {
    margin-bottom: 0;

    &.empty {
      line-height: 65px;
      text-align: center;
    }
  }
}

.option-images {
  margin:0 -10px 15px;

  .option-image {
    margin: 10px;
  }
}

.remove-optionset {
  margin-left: 10px;
}

.optionset-help-text {
  display: none;
}

#optionView {
  .close {
    margin-bottom: 15px;
  }

  .modal-header p {
    margin: 0;
  }
}

#productDelete .modal-footer {
  border-top-width: 0px;
}

#features {
  padding-left: 20px;
  margin-bottom: 20px;

  .subcomponent-section {
    margin-bottom: 5px;

    a {
      margin-left: 10px;
    }
  }
}

#specification {
  margin-left: -1px;
  margin-right: -1px;

  .panel-heading, .panel-body {
    margin-left: 50px;
  }

  > .panel-body {
    margin-left: 0px;
    background: $white;

    img {
    }
  }

  .panel-group {
    margin-bottom: 0;
  }
}

.category-warning, .duplicate-warning {
  img {
    margin: -5px 3px 0 0;
  }
}

.image-wrapper {
  height: 300px;
  float: left;
  position: relative;
  margin-right: 20px;
  min-width: 85px;

  img {
    max-height: 100%;
  }

  a {
    position: absolute;
    top: 10px;
    padding: 5px 8px;
    display: none;

    &.delete {
      right: 10px;
    }

    &.edit {
      right: 50px;
    }
  }

  &:hover a {
    display: block;
  }

  .default {
    display: table;
    position: absolute;
    top: 130px;
    text-align: center;
    line-height: 40px;
    width: 100%;
    background-color: $orange;
    color: $white;
    @include btn_style();
  }
}

.image-upload-holder {
  margin-bottom: 20px;
}

.form-footer .multi-count {
  @include btn-style();
  line-height: 32px;
}

/* DISCOVER PREVIEW */
#productPreviewDiscover {
  a,
  a:hover,
  a:focus {
    cursor: default;
  }

  hr {
    margin-top: 0px;
    margin-bottom: 0px;
  }

  h4.modal-title {
    margin-top: 10px;
  }

  .preview-status-message {
    margin-bottom: 0px;
    margin-top: 5px;

    a {
      cursor: pointer;
      color: $orange;
    }
  }

  .modal-body {
    min-height: 140px;
    max-height: 800px;
    overflow-y: auto;
  }

  .label-info {
    background-color: $purple;
  }

  .info-type {
    margin-top: 2px;
  }

  .product-info {
    margin-top: 20px;

    .table {
      margin-bottom: 0px;
    }
    .table > tbody > tr:first-child {
      border: none;
    }
    .table > tbody > tr > td {
      border: none;
      padding-top: 0px;
      padding-bottom: 0px;
      vertical-align: bottom;
      padding-left: 8px;
      padding-right: 8px;
    }
  }

  .product-name {
    margin-top: 15px;
  }

  .product-images {
    margin-top: 20px;
    margin-bottom: 10px;

    .product-main-image {
      margin-bottom: 10px;
      background-size: contain;
      background-position: center center;
      background-repeat: no-repeat;
      height: 400px;
      border: 1px solid $medium-grey;
    }

    .product-thumb {
      cursor: pointer;
      margin-top: 10px;
      margin-bottom: 10px;
      opacity: 0.5;

      .product-thumb-image {
        width: 100%;
        padding-top: 100%;
        display: block;
        line-height: 180px;
        position: relative;
        background-size: contain;
        background-position: center center;
        background-repeat: no-repeat;
        border: 1px solid $medium-grey;
      }

      &.current, &:hover {
        opacity: 1;
      }
    }
  }

  .product-info-section {
    margin-bottom: 20px;
  }

  .option-clickable {
    &:hover, &:active, &:focus {
      cursor: pointer;
    }
  }
  .option-sets-section {
    margin-top: 70px;
  }

  .product-option{
    margin-left: 10px;

    .plus-minus {
      vertical-align: baseline;
      margin-right: 5px;
    }

    .collapse, .collapsing, .in {
      @media (min-width: 992px) {
        margin-left: 4px;
      }
    }
  }

  .product-option-thumb {
    height: 80px;
    width: 80px;
    margin-right: 10px;
    margin-bottom: 25px;
    background-color: $white;
    display: inline-block;
    border: 1px solid $medium-grey;
    background-position: center;
    background-size: contain;
    background-repeat: no-repeat;

    &:last-child {
      margin-right: 0px;
    }
  }

  .shipping-section {
    padding: 0px 15px;
    margin-top: 30px;
  }

  .shipping-method {
    text-transform: capitalize;
  }

  .return-message {
    margin-top: 30px;
  }

  .return-policy-link {
    cursor: pointer;
  }
}
