/* OPTION SETS */

#option_sets {
  .edit-btn {
    display: none;
    margin-left: 15px;
  }

  .panel-body .btn-primary {
    margin-top: -55px;
  }
}

#newOptionSetModal, #newOptionModal {
  span.loading {
    display: none;
    img {
      margin: 70px 0px;
    }
  }
}

#newOptionModal {
  .image-upload-wrapper {
    padding-top: 15px;
  }
}

.option-image {
  width: 80px;
  float: left;
  margin: 0 10px 10px;

  span {
    display: block;
    margin-bottom: 5px;
    width: 100%;
    height: 80px;
    background-size: cover;
    background-position: center center;
  }

  p {
    color: $text-color;
    height: 32px;
    font-size: 13px;
    font-weight: 300;
    line-height: 1.25em;
    word-wrap: break-word;
    overflow: hidden;
  }
}

#optionset_images {
  display: inline;
  opacity: 0;
  height: 0;
}

.image-listing {
  text-align: center;
  padding-left: 15px;

  > span, > img {
    width: 70px;
    height: 70px;
    margin: 0 10px 10px 0;
    padding: 0;
  }

  span.loading {
    display: block;
    height: 70px;
    img {
      margin: 0;
    }
  }
}

.image-pages {
  height: 20px;
  margin-bottom: -20px;
  @include h3-style();
  font-size: 13px;
  line-height: 32px;

  img {
    margin-top: -3px;
  }
}

.no-options {
  padding-top: 40px;
}
