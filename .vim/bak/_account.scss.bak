/* ACCOUNT PROFILE */
.manu-image {
  display: block;
  height: 180px;
  width: 180px;
  line-height: 170px;
  position: relative;
  float: left;
  margin: 15px 15px 0 0;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;

  &.new-manu-image {
    color: $btn-info;
    border: 2px dashed $text-color;
    @include h3-style()
  }

  .delete, .edit {
    position: absolute;
    top: 5px;
    right: 5px;
    padding: 3px 6px 2px 4px;
    display: none;
  }

  &:hover a {
    display: block;
  }

  .default {
    position: absolute;
    top: 65px;
    text-align: center;
    line-height: 40px;
    width: 100%;
    background-color: $btn-info;
    color: $white;
    @include btn-style();
  }

  a {
    position: absolute;
    top: 10px;
    padding: 5px 8px;
    display: none;

    &.delete {
      right: 10px;
    }

    &.edit {
      right: 45px;
    }
  }
}

.profile-btn {
  margin-top: 15px;
}

#accountPreview {
  .modal-content {
    width: 110%;
    padding: 0px 10px;
  }
  .modal-body {
    height: 600px;
    overflow-y: scroll;
  }
}

.yield {
  margin-right: 10px;
  margin-top: 2px;
}

.logo {
  margin-bottom: 10px;
  width: 100%;
  border: 1px solid $outline-color;
  min-height: 200px;
  max-height: 300px;
  background-color: $white;
  background-position: center center;
  background-repeat: no-repeat;
  background-size: contain;
}
