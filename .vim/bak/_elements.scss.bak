.push {
  height: $footer-height;
}

.info-text {
  margin-top: -10px;
  margin-bottom: 20px;
}

img {
  max-width: 100%;
}

table a {
  color: $text-color;

  &:hover,
  &:focus {
    color: $text-color;
  }
}

.table-link {
  color: $btn-info;

  &:hover {
    color: $btn-info;
  }
}

table.table > tbody > tr > th {
  padding: 30px 20px;
  white-space: nowrap;
  @include h3-style();
}

table.table > tbody > tr > td {
    padding: 14px 20px;
    vertical-align: middle;
    border: none;

  &.coming-soon {
    border-bottom: none;
  }
}

label {
  font-weight: 300;
}

ul.unstyled,
ol.unstyled {
  margin: 0;
  padding: 0;
  list-style: none;
}

.list-inline label {
  font-weight: 200;
}

button {
  outline: none;
}

.btn-preview {
  background-color: transparent;
  border-color: $text-color;
  color: $text-color;
  margin-right: 10px;

  &:hover,
  &:focus {
    color: $orange;
    border-color: $orange;
    box-shadow: none;
  }
  &:active {
    color: $orange;
    border-color: $orange;
    box-shadow: inset 0 1px 2px rgba(0,0,0, 0.2);
  }
}

.btn.pull-right {
  margin-left: 5px;
}

hr.spacing {
  border-color: transparent;
}

.caret.right {
  content: "";
  border-right: 0;
  border-left: 4px solid;
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
}

.caret.left {
  content: "";
  border-left: 0;
  border-right: 4px solid;
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
}

.back-btn {
  position: absolute;
  top: 30px;
  left: 15px;
  color: $text-color;

  &:hover,
  &:focus,
  &:active {
    color: $text-color;
  }

}

.scrollable {
    cursor: ns-resize;
}

.grey {
  background-color: $light-highlight;

  input, textarea {
    background-color: $white;
  }

  hr {
    border-color: $outline-color;
  }
}

.panel-group {
  border-top: 2px solid $outline-color;
}

.panel-group .panel, .product-row, tr {
  background-color: $white;

  &.even {
    background-color: #f4f4f4;
  }

  .panel-heading a {
    color: $text-color;
  }
}

.panel-heading h3 {
  margin-top: 8px;
  margin-bottom: 5px;

  .plus-minus, .plus-minus-nest {
    margin-right: 15px;
    vertical-align: baseline;
  }
}

/*--------------------ICONS-------------------*/
.icon {
    display: inline-block;
    height: 12px;
    width: 12px;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: contain;
}


[class^="icon-"], [class*=" icon-"] {
  vertical-align: text-bottom;
}

