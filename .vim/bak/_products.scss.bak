/*-------------COLLECTION OF PRODUCTS--------------*/
.product-grid {
  @media (min-width: 992px) {
    margin-left: -30px;
    margin-right: -30px;
  }

  h3 {
    margin-bottom: 3px;
  }

  .no-results-message {
    margin-left: 15px;
  }
}

.product-header {
  @media (max-width: 991px) {
    text-align: center;
  }
}

.product-container {
  padding: 0px 30px;
  margin-bottom: 60px;
}

.product-image {
  margin: 15px auto;
  width: 100%;
  padding-top: 100%;
  display: block;
  line-height: 180px;
  position: relative;
  background-size: contain;
  background-position: center center;
  background-repeat: no-repeat;
  border: none;
  border-radius: 0px;
}


/*-------------PRODUCT DETAILS--------------------*/
.product-main {

  padding-bottom: 30px;
}

.info-type {
  margin-top: 2px;
}

.product-info {
  margin-top: 20px;

  .table {
    margin-bottom: 0px;
  }

  .table > tbody > tr > td {
    border-top: none;
    padding-top: 0px;
    padding-bottom: 0px;
    vertical-align: bottom;
  }
}

.product-name {
  margin-top: 15px;
}

.product-images {
  margin-top: 20px;
  margin-bottom: 10px;

  .product-main-image {
    margin-bottom: 10px;
    background-size: contain;
    background-position: center center;
    background-repeat: no-repeat;
    height: 400px;
    border: 1px solid $medium-grey;
  }
  .product-thumb {
    cursor: pointer;
    margin-top: 10px;
    margin-bottom: 10px;
    opacity: 0.5;

    .product-thumb-image {
      height: 120px;
      background-size: contain;
      background-position: center center;
      background-repeat: no-repeat;
      border: 1px solid $medium-grey;
    }

    &.current, &:hover {
      opacity: 1;
    }
  }
}

.product-info-section {
  margin-bottom: 20px;
}

.option-clickable {
  &:hover, &:active, &:focus {
    cursor: pointer;
  }
}
.option-sets-section {
  margin-top: 70px;
}

.product-option {
  margin-left: 10px;

  .plus-minus {
    vertical-align: baseline;
    margin-right: 5px;
  }

  .collapse, .collapsing, .in {
    margin-left: 4px;
  }
}

.product-option-thumb {
  height: 80px;
  width: 80px;
  margin-right: 10px;
  margin-bottom: 25px;
  background-color: $white;
  display: inline-block;
  border: 1px solid $medium-grey;
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  cursor: pointer;
}

.shipping-section {
  padding: 0px 15px;
  margin-top: 30px;
}

.shipping-method {
  text-transform: capitalize;
}

.return-message {
  margin-top: 30px;
}

.return-policy-link {
  cursor: pointer;
}

#returnPolicyModal{
  .modal-body {
    padding-bottom: 45px;
  }

  .policy-terms {
    margin-top: 30px;
  }
}

ul.info-content {
 list-style-type: none;
  li {
    float: left;
    margin-left: 5px;

    &:not(:first-child):before {
      margin-right: 5px;
      content: "x";
    }
  }
}
